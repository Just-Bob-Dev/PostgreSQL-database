<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <!-- <link rel="stylesheet" href="main.css"> -->
    <title>Todo List</title>
  </head>
  <body>
    <h1> Todo List </h1>
    <form class="inputContainer" action="/" method="post">
      <input type="text" name="todoInput" value="" placeholder="write task here"/>
      <button type="submit">submit</button>
    </form>
    <ul class="listContainer">
      {{#listItems}}
        <form action='/' method="post">
          <li><button type="submit" name="markComplete" id={{id}} value={{description}}>Mark Complete</button> {{description}} </li>
        </form>
        <br>
      {{/listItems}}
    </ul>
    <hr>
    <h1>Completed List</h1>
    <ul>
      {{#completeList}}
        <li>{{ctask}}</li>
      {{/completeList}}
    </ul>
  </body>
</html>
